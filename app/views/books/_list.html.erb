<h1>New book</h1>
<% if book.errors.any? %>
  <%= book.errors.count %>error
  <% book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <p></p>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>